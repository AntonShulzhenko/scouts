  include templates/head
  body
    .wrap
      include templates/header
      
      .content
        header.content__header.content__header_grey
          .breadcrumbs
            a.breadcrumbs__item(href="#")
              i.fa.fa-home(aria-hidden="true")
              
            a.breadcrumbs__item(href="#") О нас
          
          .content__heading
            h1.content__h1 О нас
            p.content__descr информация о клубе
        
        .content__banner
          .info
            .info__item
              p.lg 1992
              p год основания ассоциации
              
            .info__item
